<% provide(:title, "Profile") %>
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "LOCONAV", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="item" ><%= link_to "Employees", employee_index_path %></li>
        <li class="item" ><%= link_to "Onboard", new_employee_path %></li>
        <li class="item" ><%= link_to "Project", "#" %></li>
        <li class="dropdown abc" >
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" 
          aria-expanded="false">Account<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit", edit_employee_registration_path %></li>
            <li><%= link_to "Sign Out", destroy_employee_session_path, method: :delete %></li>
          </ul>
        </li>        
      </ul>
    </nav>
  </div>
</header>

<div class ="container left">
  <div class="row">
    <aside>
      <section class="user_info">
        <h1>
          <%= gravatar_for @employee %><br /><br /><br /><br /><br />
          <%= @employee.email %>
        </h1>
      </section>
    </aside>
  </div>
</div>
<div class="container right">
  <div class = "profile">
    <p>Name:<%= @employee.name %></p><br />
    <p>Email:<%= @employee.email %></p><br />
    <p>Date Of Birth:<%= @employee.DOB %></p><br />
    <p>Contact Number<%= @employee.contact %></p><br />
    <p>Designation:<%= @employee.designation %></p>
  </div>
</div>
